<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/back"
        android:scrollbars="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:stretchColumns="1">
            <TableRow>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Base.TextAppearance.Widget.AppCompat.Toolbar.Title"
                    android:text="사용자 정보 입력"
                    android:id="@+id/txtSetting"
                    android:layout_column="0" android:layout_span="2" />
            </TableRow>
            <TableRow>
                <TextView android:text="사용자명"/>
                <EditText
                    style="@style/editTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:id="@+id/userName" />
            </TableRow>
            <TableRow>
                <TextView android:text="다이빙라이센스명"/>
                <EditText
                    style="@style/editTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:id="@+id/userLicence"/>
            </TableRow>
            <TableRow>
                <TextView android:text="라이센스 번호"/>
                <EditText
                    style="@style/editTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:id="@+id/userLicenceNo"/>
            </TableRow>
        </TableLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:orientation="horizontal" >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="취소"
                android:background="@drawable/mir_btn"
                android:id="@+id/btnCancel" />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="저장하기"
                android:background="@drawable/mir_btn"
                android:id="@+id/btnSave" />
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            />
    </LinearLayout>
</ScrollView>